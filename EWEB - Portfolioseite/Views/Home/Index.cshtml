        <style>
            #map {
                height: 500px; /* Höhe der Karte */
                width: 100%; /* Breite der Karte */
            }
        </style>

        <!--Karte -->
        <div id="map"></div>

        <script>
            // 1. Karte erstellen und auf ein Div binden
            var map = L.map('map').setView([46.9424, 7.4406], 16); // Koordinaten für Berner Fachhochschule, Campus Marzili, Brückenstrasse 73

            // 2. OpenStreetMap-Kachel-Layer hinzufügen
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
              maxZoom: 19,
              attribution: '© OpenStreetMap'
            }).addTo(map);

            // 3. Marker hinzufügen
            var marker = L.marker([46.9424, 7.4406]).addTo(map);

            // 4. Popup mit Text anzeigen
            marker.bindPopup("<b>Berner Fachhochschule</b><br>Campus Marzili, Brückenstrasse 73, Bern.").openPopup();

            // 5. Polygon-Umrandung hinzufügen
            var polygon = L.polygon([
              [46.9426, 7.4400],
              [46.9428, 7.4410],
              [46.9422, 7.4412],
              [46.9420, 7.4402]
            ], {
              color: 'blue',
              fillColor: '#add8e6',
              fillOpacity: 0.5
            }).addTo(map);

            polygon.bindPopup("Campus Marzili Umrandung");
        </script>
